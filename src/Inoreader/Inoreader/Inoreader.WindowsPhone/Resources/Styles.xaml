<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Inoreader.Converters">

	<converters:FormatStringConverter x:Key="GeneralDateFormatStringConverter" StringFormat="g" />

	<SolidColorBrush Color="#F1F5FA" x:Key="ApplicationPageBackgroundThemeBrush" />
	
	<Style x:Key="LogoImageStyle" TargetType="Image">
		<Setter Property="Width" Value="16" />
		<Setter Property="Height" Value="16" />
		<Setter Property="Source" Value="ms-appx:///Assets/StoreLogo.png" />
	</Style>

	<Style TargetType="CommandBar">
		<Setter Property="Background" Value="#33537F" />
		<Setter Property="Foreground" Value="White" />
	</Style>
	
	<Style TargetType="ProgressRing">
		<Setter Property="Foreground" Value="#33537F" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalAlignment" Value="Center" />
	</Style>

</ResourceDictionary>

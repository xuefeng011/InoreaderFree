<UserControl
    x:Class="Inoreader.Views.Details.OfflineBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" Background="#FF5A5A5A">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
			<TextBlock x:Uid="OfflineBlock" Text="offline" FontSize="18" Margin="0,0,0,-3"
					           Foreground="White" VerticalAlignment="Bottom" />
			<Image Source="ms-appx:///Assets/Offline.png" Height="22" Width="22" Margin="5,0,0,0" />
		</StackPanel>
	</Grid>
</UserControl>
